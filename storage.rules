rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Las im√°genes y documentos se suben a la carpeta 'uploads' con el ID del usuario.
    // Solo el usuario propietario puede leer y escribir en su propia carpeta.
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
