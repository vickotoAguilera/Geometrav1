rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta 'uploads'
    match /uploads/{userId}/{allPaths=**} {
      // Solo el usuario autenticado y propietario puede leer y escribir en su carpeta.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
